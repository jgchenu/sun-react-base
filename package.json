{
  "name": "sun-react-ui",
  "version": "0.1.14",
  "description": "React components library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "Component",
    "UI",
    "React"
  ],
  "homepage": "https://github.com/jgchenu/sun-react-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgchenu/sun-react-ui"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/jest": "^24.0.0",
    "classnames": "^2.2.6",
    "docz": "^2.3.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0"
  },
  "scripts": {
    "release": "yarn prepublishOnly && yarn post:version && yarn npm:publish",
    "npm:publish": "npm login --registry http://registry.npmjs.org && npm publish --registry http://registry.npmjs.org",
    "post:version": "npm version patch -m \"feat(version): upgrade to %s for reasons\"",
    "clean": "rimraf ./dist ./storybook-static",
    "start": "yarn docs",
    "build": "yarn clean && yarn build:css && yarn build:ts",
    "eslint": "eslint --ext js,ts,tsx src --max-warnings 5",
    "stylelint": "stylelint src/**/*.less src/**/*.css",
    "lint": "yarn eslint && yarn stylelint",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:css": "lessc ./src/styles/index.less ./dist/index.css",
    "test": "react-scripts test",
    "test:nowatch": "cross-env CI=true react-scripts test",
    "eject": "react-scripts eject",
    "docs": "start-storybook -p 6006 -s public",
    "pub:docs": "yarn build:docs && storybook-to-ghpages --existing-output-dir=storybook-static",
    "build:docs": "build-storybook -s public",
    "prepublishOnly": "yarn test:nowatch && yarn lint && yarn build",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:serve": "docz build && docz serve"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "./pre_commit.sh && yarn lint && yarn stylelint"
    }
  },
  "storybook-deployer": {
    "gitUsername": "jgchenu",
    "gitEmail": "jgchenu@foxmail.com",
    "commitMessage": "docs: deploy docs"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "typescript": "~3.7.2",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@babel/core": "^7.11.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/classnames": "^2.2.10",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.0",
    "husky": "^4.2.5",
    "less": "^3.12.2",
    "less-loader": "^6.2.0",
    "react-is": "^16.13.1",
    "rimraf": "^3.0.2",
    "stylelint": "^12.0.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-webpack-plugin": "^1.2.1"
  }
}
