{
  "name": "sun-react-ui",
  "version": "0.1.18",
  "description": "React components library",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "Component",
    "UI",
    "React"
  ],
  "homepage": "https://github.com/jgchenu/sun-react-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgchenu/sun-react-ui"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "classnames": "^2.2.6"
  },
  "scripts": {
    "release": "yarn build && standard-version",
    "publish": "npm login --registry http://registry.npmjs.org && npm publish --registry http://registry.npmjs.org",
    "clean": "rimraf ./dist ./docz",
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father-build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "stylelint": "stylelint src/**/*.less src/**/*.css --fix",
    "lint": "yarn prettier && yarn stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "./pre_commit.sh && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ],
    "*.less": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/classnames": "^2.2.10",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@umijs/test": "^3.0.5",
    "dumi": "^1.0.16",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.0",
    "less-loader": "^6.2.0",
    "prettier": "^2.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.2.0",
    "stylelint": "^12.0.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^19.0.0",
    "husky": "^4.2.5"
  }
}
